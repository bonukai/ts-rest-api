{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "build",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "disableSizeLimit": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
